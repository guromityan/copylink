{
  "manifest_version": 2,
  "name": "copylink",
  "description": "Copy the page title or MD format link.",
  "version": "1.0.0",
  "background": {
    "scripts": ["js/background.js"]
  },
  "commands": {
    "copy-md": {
      "suggested_key": {
        "default": "Ctrl+K",
        "mac": "Command+K",
        "windows": "Ctrl+K",
        "chromeos": "Ctrl+K"
      },
      "description": "copy MD formt link to clipboad."
    },
    "copy-title": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+Shift+K",
        "windows": "Ctrl+Shift+K",
        "chromeos": "Ctrl+Shift+K"
      },
      "description": "copy title to clipboad."
    }
  },
  "permissions": [
    "tabs",
    "contextMenus"
  ]
}
